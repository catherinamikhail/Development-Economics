# Parameters
pi1 <- 0.25
pi2 <- 0.15
F <- 0.3
t <- 1
x <- 1
F_xt <- F/(x*t)     # 0.3
# Kink points
Sm_low_kink <- (0.3 - pi1) / (1 - pi1 - pi2)   # ~0.08333
Sm_up_kink  <- (1 - F_xt - pi1) / (1 - pi1 - pi2) # 0.75
# equilibrium
Sm_eq <- 0.625
Sp_eq <- Sm_eq
# Functions and sequences
f_Sp <- function(Sm) pi1 + Sm * (1 - pi1 - pi2)
Sm_seq <- seq(0, 1, length.out = 300)
Sp_seq <- f_Sp(Sm_seq)
# Build piecewise PP
PP_Sm <- c(0, Sm_low_kink,
seq(Sm_low_kink, Sm_up_kink, length.out=80),
Sm_up_kink, 1)
PP_Sp <- c(rep(F_xt, 2)[1], rep(F_xt, 2)[2],
f_Sp(seq(Sm_low_kink, Sm_up_kink, length.out=80)),
rep(1 - F_xt, 2)[1], rep(1 - F_xt, 2)[2])
# Plot
plot(NULL, xlim=c(0,1), ylim=c(0,1),
xlab=expression(S[m] ~ "(share manufacturing)"),
ylab=expression(S[p] ~ "(share total population)"),
main="PP-line and MM-line with dynamics (arrows)")
# MM-line (45 degree)
segments(0,0,1,1, lty=2, lwd=1.5)
# horizontal F/xt guides
abline(h = F_xt, lty=3)
abline(h = 1 - F_xt, lty=3)
# Plot kinked PP (red)
lines(PP_Sm, PP_Sp, col="firebrick", lwd=2)
points(c(Sm_low_kink, Sm_up_kink, Sm_eq),
c(F_xt, 1 - F_xt, Sp_eq),
pch=16, col="firebrick", cex=1.2)
# Mark equilibrium
points(Sm_eq, Sp_eq, pch=21, bg="white", col="black", cex=1.6, lwd=1.5)
text(Sm_eq + 0.03, Sp_eq + 0.03, "Equilibrium\n(0.625,0.625)")
# Add arrows showing direction of Sm adjustments
# Use representative x positions and draw horizontal arrows pointing toward Sm_eq
arrow_y <- c(0.3, 0.45, 0.55, 0.68, 0.78, 0.9) # vertical placement of arrows
arrow_x <- c(0.04, 0.3, 0.5, 0.68, 0.85, 0.95) # starting x's
# decide directions: if Sp(Sm) - Sm >0 arrow right, else left
for(i in seq_along(arrow_x)) {
sx <- arrow_x[i]
# find Sp at that sx (use piecewise PP)
if(sx <= Sm_low_kink) Sp <- F_xt
else if(sx >= Sm_up_kink) Sp <- 1 - F_xt
else Sp <- f_Sp(sx)
if(Sp - sx > 0) { # move right
arrows(x0 = sx - 0.02, y0 = arrow_y[i],
x1 = sx + 0.07, y1 = arrow_y[i],
length=0.08, col="gray40", lwd=2)
} else { # move left
arrows(x0 = sx + 0.02, y0 = arrow_y[i],
x1 = sx - 0.07, y1 = arrow_y[i],
length=0.08, col="gray40", lwd=2)
}
}
# labels
text(0.2, 0.26, expression(F/xt == 0.3), col="firebrick")
text(0.8, 0.72, expression(1 - F/xt == 0.7), col="firebrick")
text(0.88, 0.9, "MM-line", adj=0)
text(0.6, 0.5, "PP-line", col="firebrick", adj=0)
