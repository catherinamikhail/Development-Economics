# --- Parameters ---
pi1 <- 0.25
pi2 <- 0.15
F <- 0.3
t <- 1
x <- 1
F_xt <- F / (x * t)   # = 0.3
# Define the function Sp = f(Sm)
f_Sm <- function(Sm) {
pi1 + Sm * (1 - pi1 - pi2)
}
# Sequence for Sm (share of manufacturing)
Sm <- seq(0, 1, length.out = 100)
Sp <- f_Sm(Sm)
# --- Plot base ---
plot(Sm, Sp,
type = "l", lwd = 2, col = "red",
xlab = expression(S[m] ~ "(share manufacturing)"),
ylab = expression(S[p] ~ "(share total population)"),
xlim = c(0, 1), ylim = c(0, 1),
main = "Krugman (1991) Core–Periphery Model")
# Add the 45-degree line (MM-line)
abline(a = 0, b = 1, lwd = 2, lty = 2, col = "black")
# Add dashed horizontal and vertical lines for intercepts
abline(h = pi1, lty = 3)
abline(h = 1 - pi2, lty = 3)
abline(v = 1, lty = 3)
# --- Add F/xt horizontal segments ---
# Lower left segment
segments(x0 = 0, y0 = F_xt, x1 = 0.3, y1 = F_xt, lwd = 2, col = "darkred")
text(0.32, F_xt, expression(F/xt == 0.3), pos = 4, col = "darkred")
# Upper right segment
segments(x0 = 0.7, y0 = 1 - F_xt, x1 = 1, y1 = 1 - F_xt, lwd = 2, col = "darkred")
text(0.68, 1 - F_xt, expression(F/xt == 0.3), pos = 2, col = "darkred")
# --- Labels for main curves ---
text(0.8, 0.8, "MM-line", pos = 4, col = "black")
text(0.6, 0.55, "PP-line", pos = 4, col = "red")
